<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             tools:context="com.pionet.iot_challengeapp.MainActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="550dp"
                android:layout_height="520dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.054"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.052">


            <LinearLayout
                    android:layout_width="550dp"
                    android:layout_height="86dp"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/menu1"
                        android:layout_width="20dp"
                        android:layout_height="85dp"
                        android:layout_weight="1"
                        android:text="@string/menu1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.031"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.051" />

                <Button
                        android:id="@+id/menu2"
                        android:layout_width="20dp"
                        android:layout_height="85dp"
                        android:layout_weight="1"
                        android:text="@string/menu2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.206"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.051" />

                <Button
                        android:id="@+id/menu3"
                        android:layout_width="20dp"
                        android:layout_height="85dp"
                        android:layout_weight="1"
                        android:text="@string/menu3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.38"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.051" />

                <Button
                        android:id="@+id/menu4"
                        android:layout_width="20dp"
                        android:layout_height="85dp"
                        android:layout_weight="1"
                        android:text="@string/menu4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.555"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.051" />

                <Button
                        android:id="@+id/menu5"
                        android:layout_width="20dp"
                        android:layout_height="85dp"
                        android:layout_weight="1"
                        android:text="@string/menu5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.555"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.051" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="550dp"
                    android:layout_height="86dp"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/submenu1"
                        android:layout_width="20dp"
                        android:layout_height="85dp"
                        android:layout_weight="1"
                        android:text="@string/submenu1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.031"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.051" />

                <Button
                        android:id="@+id/submenu2"
                        android:layout_width="20dp"
                        android:layout_height="85dp"
                        android:layout_weight="1"
                        android:text="@string/submenu2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.206"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.051" />

                <Button
                        android:id="@+id/submenu3"
                        android:layout_width="20dp"
                        android:layout_height="85dp"
                        android:layout_weight="1"
                        android:text="@string/submenu3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.38"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.051" />

                <Button
                        android:id="@+id/submenu4"
                        android:layout_width="20dp"
                        android:layout_height="85dp"
                        android:layout_weight="1"
                        android:text="@string/submenu4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.555"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.051" />

                <Button
                        android:id="@+id/submenu5"
                        android:layout_width="20dp"
                        android:layout_height="85dp"
                        android:layout_weight="1"
                        android:text="@string/submenu5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.555"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.051" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="550dp"
                    android:layout_height="170dp"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/ProductButton0"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/product1"/>

                <Button
                        android:id="@+id/ProductButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/product2"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="550dp"
                    android:layout_height="170dp"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/ProductButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/product3" android:tag="@string/product3"/>

                <Button
                        android:id="@+id/ProductButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/product4" android:tag="@string/product4"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="520dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/orderList"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/orderList"
                    android:textSize="30sp" />

            <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="281dp" />

            <Button
                    android:id="@+id/OrderButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/orderButton"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/CallButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/callButton"/>

                <Button
                        android:id="@+id/CheckButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/checkButton"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
            android:id="@+id/DeviceOwnerOffButton"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:text="@string/deviceOwnerOff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.814"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.97"/>
    <Button
            android:id="@+id/KioskOffButton"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:text="@string/kioskOff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.981"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.97"/>

</android.support.constraint.ConstraintLayout>